---
import Reads from "../components/Statuses/Reads";
import Tunes from "../components/Statuses/Tunes";
---

<div>
  <style>
    details {
      &.tunes {
        summary::marker {
          content: url("data:image/svg+xml;base64,");
        }
        &[open] summary::marker {
          content: url("data:image/svg+xml;base64,");
        }
      }
      &.reads {
        summary::marker {
          content: url("data:image/svg+xml;base64,");
        }
        &[open] summary::marker {
          content: url("data:image/svg+xml;base64,");
        }
      }
    }

    h3 {
      display: inline;
      padding-left: 5px;
    }
  </style>
  <details class="reads">
    <summary> <h3>reads</h3></summary>
    <Reads client:only="react" />
  </details>
  <details class="tunes">
    <summary> <h3>tunes</h3></summary>
    <Tunes client:only="react" />
  </details>
</div>
